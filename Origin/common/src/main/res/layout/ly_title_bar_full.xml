<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_status_bar"
    android:paddingTop="@dimen/status_bar_height_full">

    <android.support.v7.widget.Toolbar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:contentInsetStartWithNavigation="@dimen/title_bar_navigation_margin"
        app:titleTextAppearance="@style/ToolbarTitle">

        <TextView
            android:id="@+id/tv_title_bar_close"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="关闭"
            android:textColor="@color/text_title_bar_title"
            android:textSize="@dimen/title_bar_title"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title_bar_title_left"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="左侧标题"
            android:textColor="@color/text_title_bar_title"
            android:textSize="@dimen/title_bar_title"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title_bar_title_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="中间标题"
            android:textColor="@color/text_title_bar_title"
            android:textSize="@dimen/title_bar_title"
            android:visibility="gone" />

    </android.support.v7.widget.Toolbar>

</FrameLayout>
